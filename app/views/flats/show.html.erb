<div class ="container">
  <div class="row">
    <h1 class="titre_show">Appartement <%= @flat.city %> <%=  @flat.zipcode %>  </h1>
  </div>

  <div class= "card result">
<div class="row"> </div>

    <div class="result_show col-xs-12 col-sm-6">
      <div class ="btn_show">
        <a href="" class="btn-rouge"> <span class="coeur"></span>
          <span class="text-btn-show"> Favoris </span> </a>

          <a href="" class="btn-transparent-grey"> <span> <img src="/assets/connexion.svg" alt=""> </span>
            <span class="text-btn-show"> Partager </span></a>
      </div>
<div class="fb-share-button" data-href="<%=flat_path(@flat)%>" data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Flocalhost%3A3000%2Fflats%2F27&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Partager</a></div>

          <div class="infos_principales_show">
            <%= @flat.nb_rooms %> <%= "pièce".pluralize(@flat.nb_rooms) %> | <%= @flat.surface_ground %> m²
          </div>
          <div class=" nbre_chambres_show">
            <%= @flat.nb_bedrooms %> <%= "chambre".pluralize(@flat.nb_bedrooms) %>
          </div>
          <div class=" price_show">
            <%= @flat.price %> €
            <% if @flat.rent_or_buy == "louer" %> / mois
            <% else %>
            <% end %>
          </div>
          <div class="price_surface_show">
            <% if @flat.rent_or_buy == "acheter" %>
            <%= @flat.price. / @flat.surface_ground %> € / m²
            <% else %>
            <% end %>
          </div>
          <div class=" link_show">
            <%=  @flat.website_source %>
          </div>
        </div>




  <div id="myCarousel" class="carousel slide carousel_show col-xs-12 col-sm-6" data-ride="carousel" data-interval="false">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <% @flat.photos.count.times do |index| %>
          <li data-target= "#myCarousel" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : ''%>">
          </li>
        <% end %>


      </ol>
      <!-- Wrapper for slides -->
        <div class="carousel-inner">

        <!-- <div class="item active">
          <img src="<%= @flat.photos.first %>" class="img_carousel_show">
        </div> -->
        <% @flat.photos.each_with_index do |photo, index| %>
         <div class="item <%= index == 0 ? 'active' : 'card-picture'%>">
          <img src="<%= @flat.photos[index]%>" class="img_carousel_show img-fluid">
        </div>
        <%end%>


      </div>
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    </div>
</div>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.2';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>



