<div class="favorites">
  <h2>Mes Favoris</h2>
  <div>
  <% @favorites.each_with_index do |favorite, index| %>
      <% myCarousel = "myCarousel#{index.to_s}" %>
      <% myCarousel_href = "#myCarousel#{index.to_s}" %>
      <a class="white-circle margin-left-10"> <span class="full-heart"> </span> </a>
      <div class="card">
        <div class="card-picture">
          <div id= <%= myCarousel %> class="carousel slide" data-ride="carousel" data-interval="false">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target= <%=myCarousel_href%> data-slide-to="0" class="active"></li>
              <li data-target= <%=myCarousel_href%> data-slide-to="1"></li>
              <li data-target= <%=myCarousel_href%> data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <div class="item active">
                <img src="<%= favorite.flat.photos.first %>" style="max-height: 280px">
              </div>
              <div class="item">
                <img src="<%= favorite.flat.photos[1]%>" style="max-height: 280px">
              </div>
              <div class="item">
                <img src="<%= favorite.flat.photos[2]%>" style="max-height: 280px">
              </div>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href=<%=myCarousel_href%> data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href=<%=myCarousel_href%> data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="card-informations">
          <div class="card-title">
            <p> Appartement à <%= favorite.flat.city %> (<%= favorite.flat.zipcode %>)</p>
          </div>
          <div class="infos">
            <p> <span class="background-gray"> T<%=favorite.flat.nb_rooms%> </span>
            <span class="background-gray"><%=favorite.flat.surface_ground%>m² </span></p>
          </div>
            <%if favorite.flat.nb_bedrooms.nil? || favorite.flat.nb_bedrooms == 0  %>
              <p></p>
            <%else%>
              <div class="bedroom">
                <%= favorite.flat.nb_bedrooms %> <%= "chambre".pluralize(favorite.flat.nb_bedrooms) %>
              </div>
            <% end %>
          <div class="price">
            <p><strong> <%=favorite.flat.price%>€ </strong>
            <% if favorite.flat.rent_or_buy == "louer" %> / mois
            <% end%>
            </p>
          </div>
          <% if favorite.flat.website_source == "logic-immo.com" %>
            <img src="https://res.cloudinary.com/mcouraud/image/upload/c_scale,w_80/v1544534380/logicimmo.png" alt="logic-immo" >
          <% end %>
          <% if favorite.flat.website_source == "pap.fr" %>
            <img src="https://res.cloudinary.com/mcouraud/image/upload/c_scale,w_40/v1544642546/pap.png" alt="pap.fr">
          <% end %>
          <% if favorite.flat.website_source == "seloger.com" %>
            <img src="https://res.cloudinary.com/mcouraud/image/upload/c_scale,h_40,w_96/v1544534382/seloger.png" alt="seloger.com">
          <% end %>
          <div class="centered-bottom">
            <a class="btn-green" href="<%= favorite.flat.ad_url %>" target="_blank"> Découvrir</a>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
